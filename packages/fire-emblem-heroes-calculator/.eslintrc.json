{
  "extends": [
    "ajhyndman/flow",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "ga": false,
    "ReactClass": false
  },
  "plugins": [
    "no-null",
    "prettier"
  ],
  "rules": {
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "semi": ["error", "always"],

    "no-null/no-null": ["error"],

    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all",
      "parser": "flow"
    }],

    "react/sort-comp": ["error", {
      "order": [
        "type-annotations",
        "static-methods",
        "lifecycle",
        "/^on.+$/",
        "everything-else",
        "render"
      ]
    }]
  }
}
